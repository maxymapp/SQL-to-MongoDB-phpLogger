{% extends 'CoreBundle:Dashboard:layout.html.twig' %}

{% block currentpagetitle %}Search Results{% endblock %}

{% block body %}
    <article class="container_12" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
        <section class="grid_12">
            <div class="block-border">
                <div class="block-content">
                    <h1>Search Results</h1>
                    <p>
                        <h2>Yor search keyword(s) is(are) found in these files:</h2>
                    </p>
                    <p>
                        <ul class="extended-list">
                            {% for logFile in searchResults %}
                                <li class="icon-article">
                                    <span class="icon"></span>
                                    <span class="big">{{ logFile.year }}</span>
                                    <a href="{{ path('logger_display_log', { 'year':logFile.year, 'logFile':logFile.fileName }) }}">{{ logFile.fileName }}</a>
                                    <br><br><br><br>
                                    <p>
                                        {% for line in logFile.lines[0] %}
                                            {{ line }}<br>
                                        {% endfor %}
                                    </p>
                                </li>
                            {% endfor %}
                        </ul>
                    </p>
                </div>
            </div>
        </section>
    </article>
{% endblock %}